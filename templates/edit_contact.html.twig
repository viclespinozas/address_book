{% extends 'base.html.twig' %}

{% block content %}
    <div class="card-body margin-top">
        <h3>Edit Contact</h3>
    </div>
    <div class="card-body">
        <form action="{{ path('edit_contact', {'contactId': contact.id}) }}" method="POST">
            <div class="row">
                <div class="col">
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col">
                    {{ form_label(form.lastName) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-4 margin-top">
                    {{ form_label(form.street) }}
                    {{ form_widget(form.street, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-2 margin-top">
                    {{ form_label(form.streetNumber) }}
                    {{ form_widget(form.streetNumber, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-2 margin-top">
                    {{ form_label(form.zip) }}
                    {{ form_widget(form.zip, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col margin-top">
                    {{ form_label(form.city) }}
                    {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col margin-top">
                    {{ form_label(form.country) }}
                    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col margin-top">
                    {{ form_label(form.phoneNumber) }}
                    {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col margin-top">
                    {{ form_label(form.birthDate) }}
                    {{ form_widget(form.birthDate, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col margin-top">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="row margin-top">
                <div class="col margin-top">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}